@model MeteredPage.ViewModels.CustomerMetersModel
@{
    ViewData["Title"] = "Contoso Offer Meter Page";
}

@if (ViewBag.Message != null)
{
    <h2>@ViewBag.Message</h2>
}
else
{
    <div class="modal-body">
        <span><b>Current Metered Usage for @Model.SubscriptionId</b></span>
        <table>
            <thead><tr><td>Name</td><td>Last Update</td><td>Consumed Total</td> <td>Remaining</td></tr></thead>
            <tbody>
                @foreach (var meter in Model.CurrentMeterSummary)
                {
                    <tr>
                        <td>@meter.Name</td>
                        <td>@meter.LastUpdate</td>
                        <td>@meter.ConsumedDimensionQuantity</td>
                        <td>@meter.IncludedDimensionQuantity</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </div>

